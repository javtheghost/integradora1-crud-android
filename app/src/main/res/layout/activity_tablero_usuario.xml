<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5"
    android:background="#FFFFFF"
    tools:context="net.larntech.proyectointegradora.TableroUsuarioActivity"
    android:orientation="vertical"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Qué quieres publicar?"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:onClick="postProducto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#946DD9"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvProductos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Productos"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginLeft="70dp"
                    android:layout_toRightOf="@id/tvProductos"
                    android:maxHeight="100dp"
                    android:src="@drawable/ic_electronics" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:onClick="recyclerCategorias"
                android:id="@+id/linerCategorias"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#CC6DD9"
                android:padding="10dp">

                <TextView
                    android:onClick="recyclerCategorias"
                    android:id="@+id/tvCategorias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Categorias"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:id="@+id/ivCategorias"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="40dp"
                    android:layout_toRightOf="@id/tvCategorias"
                    android:maxHeight="100dp"
                    android:src="@drawable/ic_electronics" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:onClick="recyclerProveedor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#4499DD"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tvProveedores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Proveedores"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp"
                    android:textStyle="bold">

                </TextView>

                <ImageView
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="40dp"
                    android:layout_toRightOf="@id/tvProveedores"
                    android:maxHeight="100dp"
                    android:src="@drawable/ic_proveedor" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
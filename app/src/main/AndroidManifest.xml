<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.larntech.retrofit">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="App integradora"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="net.larntech.proyectointegradora.RegistroActivity"
            android:exported="false" />
        <activity android:name="net.larntech.proyectointegradora.ProveedorRecycler" />
        <activity android:name="net.larntech.proyectointegradora.RecyclersViews.CategoriaRecycler" />
        <activity android:name="net.larntech.proyectointegradora.PublicarCategoria" />
        <activity android:name="net.larntech.proyectointegradora.PublicarProveedor" />
        <activity android:name="net.larntech.proyectointegradora.ProductoDetallesActivity" />
        <activity android:name="net.larntech.proyectointegradora.TableroUsuarioActivity" />
        <activity android:name="net.larntech.proyectointegradora.PublicarProductoActivity" />
        <activity android:name="net.larntech.proyectointegradora.MainActivity"/>
        <activity android:name="net.larntech.proyectointegradora.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>